<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style
        x:Key="TransparentButton"
        BasedOn="{StaticResource {x:Type Button}}"
        TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Cursor" Value="Arrow" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style
        x:Key="TitleBarButton"
        BasedOn="{StaticResource TransparentButton}"
        TargetType="Button">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#1aFFFFFF" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style
        x:Key="TitleBarCloseButton"
        BasedOn="{StaticResource TitleBarButton}"
        TargetType="Button">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#9aff0000" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style
        x:Key="ListItemButton"
        BasedOn="{StaticResource TransparentButton}"
        TargetType="Button">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#1f000000" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style
        x:Key="SettingsButton"
        BasedOn="{StaticResource TransparentButton}"
        TargetType="Button">
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <materialDesign:PackIcon
                        Width="30"
                        Height="30"
                        Foreground="{TemplateBinding Foreground}"
                        Background="{TemplateBinding Background}"
                        Kind="Settings" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="DarkGray" />
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>